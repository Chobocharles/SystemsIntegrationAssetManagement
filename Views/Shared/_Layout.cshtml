<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asset_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow" data-children-count="1">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">GNS Automotive</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" data-children-count="0"></span>
        </button>

        @await Component.InvokeAsync("Search")

        <ul class="navbar-nav px-3">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item text-nowrap float-left righ">
                    <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a>
                </li>
            }
            else
            {
                <li class="nav-item text-nowrap">
                    <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign in</a>
                </li>
            }
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Dashboard <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contacts" asp-action="Index">
                                <i class="fas fa-user-friends"></i>
                                Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Assets" asp-action="Index">
                                <i class="fas fa-laptop"></i>
                                Devices
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiceRecords" asp-action="Index">
                                <i class="fas fa-tools"></i>
                                Service Records
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AssetTypes" asp-action="Index">
                                <i class="fas fa-laptop-medical"></i>
                                Device Types
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Locations" asp-action="Index">
                                <i class="fas fa-building"></i>
                                Locations
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Asset_Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chartjs/Chart.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
